<div class="container" style="width: 80%;margin-top: 40px;">
<%= form_for @user,url: admin_users_path, method: :post, multipart: true do |f| %>
<div  class="row form-group">
  <label style="" class="control-label">Tên đăng nhập(*)</label><br>
  <input type="text" class="form-control" name="user[username]" required="true"
  value="">
</div>
<div class="row form-group">
  <label class="control-label">Tên đầy đủ(*)</label>
  <input type="text" class="form-control" name="user[fullname]" required="true"
  value="">
</div>
<div class="row form-group">
  <label class="control-label">Avatar</label>
  <%= f.file_field :avatar %>
</div>
<div  class="row form-group">
  <label class="control-label">Mật khẩu(*)</label>
  <input type="password" class="form-control" name="user[password]" value="" id="password" placeholder="******">
</div>
<div class="row form-group">
  <label class="control-label">Nhập lại mật khẩu*)</label>
  <input type="password" class="form-control" name="user[re_password]" value="" placeholder="******">
</div>

<div class="form-group text-right">
  <input type="submit" class="btn btn-primary" name="submit" value="Sửa">
  <input type="reset" class="btn btn-primary" name="reset" value="Nhập lại">
</div>
<% end %>
<div class="container" style="width: 80%;margin-top: 40px;">
