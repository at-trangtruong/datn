<div id="searchs" class="search" style="margin-top: 50px;">
<%= form_tag searches_path, method: :get do %>
	<form action="index_submit" method="get" accept-charset="utf-8">
		<div class="row" style="padding-left: 110px;">
			<div class="col-sm-2">
				<div>
					<label for="">Quận</label>
				</div>
				<div class="form-group">
					<select name="district" class="form-control">
            <option value="">---</option>
            <option value="CamLe">Cẩm Lệ</option>
            <option value="HaiChau">Hải Châu</option>
            <option value="HoaVang">Hòa Vang</option>
            <option value="LienChieu">Liên Chiểu</option>
            <option value="NguHanhSon">Ngủ Hành Sơn</option>
            <option value="SonTra">Sơn Trà</option>
            <option value="ThanhKhe">Thanh Khê</option>
          </select>
        </div>
      </div>
      <div class="col-sm-2">
        <div>
          <label for="">Loại nhà hàng</label>
        </div>
        <div class="form-group">
          <select name="type" class="form-control">
            <option value="">---</option>
            <option value="BinhDan">Bình dân</option>
            <option value="SangTrong">Sang trọng</option>
            <option value="CaoCap">Cao cấp</option>
          </select>
        </div>
      </div>
      <div class="col-sm-2">
        <div>
         <label for="">Ẩm thực</label>
       </div>
       <div class="form-group">
         <select name="regions" class="form-control">
          <option value="">---</option>
          <option value="MienBac">Miền Bắc</option>
          <option value="MienNam">Miền Nam</option>
          <option value="MienTrung">Miền Trung</option>
          <option value="ChauAu">Châu Âu</option>
          <option value="ChauA">Châu Á</option>
        </select>
      </div>
    </div>
    <div class="col-sm-2">
      <div>
       <label for="">Quy mô</label>
     </div>
     <div class="form-group">
       <select name="size" class="form-control">
        <option value="">---</option>
        <option value="Lon">Lớn</option>
        <option value="Vua">Vửa</option>
        <option value="Nho">Nhỏ</option>
      </select>
    </div>
  </div>
  <div class="col-sm-2">
    <div>
     <label for="">Bữa</label>
   </div>
   <div class="form-group">
     <select name="meals" class="form-control">
      <option value="">---</option>
      <option value="BuaSang">Bữa sáng</option>
      <option value="BuaTrua">Bữa trưa</option>
      <option value="BuaToi">Bữa tối</option>
      <option value="AnVat">Ăn vặt</option>
      <option value="AnKhuya">Ăn khuya</option>
    </select>
  </div>
</div>
<div class="col-sm-1" style="padding-top: 25px;">
 <button type="submit" class="btn btn-primary">
   <i class="fa fa-search"></i>
 </button>
</div>
</div>
<% end %>
</div>

