<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag(source='logo_edu.png', options={}) %>
<meta charset="UTF-8">
<title>Sign-Up/Login Form</title>
<link
  href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel="stylesheet" href="http://localhost:3000/assets/public/css/stylelogin.css">
</head>

<body>
  <div class="form">

    <ul class="tab-group">
      <li class="tab active"><a href="#login">Log In</a></li>
      <li class="tab"><a href="#signup">Sign Up</a></li>

    </ul>

    <div class="tab-content">
      <div id="login">
        <h1>Welcome</h1>

        <%= form_for @user, url: login_users_path do |f| %>
          <div class="field-wrap">
            <label style="margin-left: -15px;"> Username<span
              class="req">*</span>
            </label><br>
            <br>
            <%= f.text_field :username, autocomplete: "off", required: true %>
          </div>
          <div class="field-wrap">
            <label style="margin-left: -15px;"> Password<span
              class="req">*</span>
            </label><br>
            <br>
            <%= f.password_field :password, autocomplete: "off", required: true %>
          </div>
          <%= render partial: 'shared/show_messages', locals: {flash: flash} %>
          <input type="submit" name="submitlogin" class="button button-block"
            value="Log In" />
        <% end %>

      </div>

      <div id="signup">
        <h1>Sign Up for Free</h1>
        <%= form_for @user,url: signup_users_path, multipart: true do |f| %>
          <div class="top-row">
            <div class="field-wrap">
            <%= f.text_field :username, autocomplete: "off", required: true, placeholder: "Username*" %>
            </div>

            <div class="field-wrap">
              <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "Password*" %>
            </div>
          </div>
          <div class="top-row">
            <div class="field-wrap">
              <%= f.text_field :fullname, autocomplete: "off", required: true, placeholder: "Fullname*" %>
            </div>
            <div class="">
              <%= f.file_field :avatar %>
            </div>
          </div>
          <input type="submit" name="submitsignup"
            class="button button-block" value="Sign Up" />
        <% end %>
      </div>

    </div>

    <!-- tab-content -->
  </div>
  <!-- /form -->
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script src="http://localhost:3000/assets/public/js/index.js"></script>
</body>
</html>
