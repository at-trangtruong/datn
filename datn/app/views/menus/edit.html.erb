<div class="templatemo-content-container">
  <div class="templatemo-content-widget white-bg">
    <div style="width: 80%;margin-left: 150px;margin-top: 150px;" class="module-body">
      <h2 class="margin-bottom-10" style="text-align: center;">SỬA MENU</h2>
      <%= form_for @menu, url: menu_path,method: :put, multipart: true do |f|%>
        <div class="row form-group">
          <div style="margin-bottom: 10px;" class="">
            <label for="inputFirstName">Tên món</label>
            <input type="text" class="form-control" id="inputFirstName" required="required" name="menu[name]" value="<%= @menu.name %>">
          </div>
          <div class=" form-group">
            <label class="control-label templatemo-block">Địa điểm</label>
            <select style="width: 30%;" name="menu[restaurant_id]" class="form-control" required="required">
              <option value="">Chọn nhà hàng</option>
              <% @current_user.restaurants.each do |rest| %>
              <option  value="<%= rest.id %>"><%= rest.name %></option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="row form-group">
          <div style="margin-bottom: 10px;"  class="">
            <label for="inputFirstName">Giá</label>
            <input required="required" type="number" class="form-control" id="inputFirstName" placeholder=""
            name="menu[cost]" value="<%= @menu.cost %>" min="0">
          </div>

        <div class="row form-group">
          <div class="">
            <label class="control-label templatemo-block">Hình ảnh</label>
            <%= f.file_field :picture, class: "file" %>
          </div>
        </div>
        <div class="form-group text-right">
          <!-- <button type="submit" class="templatemo-blue-button" name="submit">Thêm</button> -->
          <input type="submit" class="btn btn-primary" name="submit" value="SỬA">
          <input type="reset" class="btn btn-primary" name="reset" value="Nhập lại">
          <!-- <button type="reset" class="templatemo-white-button">Nh?p l?i</button> -->
        </div>
      <% end %>
    </div> <!-- End .module-body -->
  </div>
